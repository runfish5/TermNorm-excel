<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" 
           xsi:type="TaskPaneApp">

  <!-- Basic Add-in Information -->
  <Id>43bfdaa7-9045-4cc8-a0d8-bf2f76b4ec6b</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Runfish-data</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Display Name -->
  <DisplayName DefaultValue="excel-entity-standardizer" />
  
  <!-- Description -->
  <Description DefaultValue="Map custom names to standard terms in Excel. Automate mappings with AI, displayed in a dedicated column. Support configurable mapping tables for different Excel files. Dynamic Mapping: The add-in first checks your mapping table using simple rules. If nothing matches, it calls AI to help." />
  
  <!-- Icon URLs (placeholder - you'll need actual icons for store submission) -->
  <IconUrl DefaultValue="https://runfish5.github.io/excel-entity-standardizer/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://runfish5.github.io/excel-entity-standardizer/assets/icon-64.png" />
  
  <!-- Support URL -->
  <SupportUrl DefaultValue="https://github.com/runfish5/excel-entity-standardizer/issues" />
  
  <!-- Privacy Policy URL (required for store) -->
  <AppDomains>
    <AppDomain>https://runfish5.github.io</AppDomain>
  </AppDomains>
  
  <!-- Hosts - specifies which Office applications -->
  <Hosts>
    <Host Name="Workbook" />
  </Hosts>
  
  <!-- Default Settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://runfish5.github.io/excel-entity-standardizer/taskpane.html" />
  </DefaultSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>
  
  <!-- Version Overrides for Ribbon Integration -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <!-- Description for newer clients -->
    <Description resid="GetStarted.Description"/>
    
    <!-- Requirements -->
    <Requirements>
      <Sets DefaultMinVersion="1.1">
        <Set Name="ExcelApi" MinVersion="1.1"/>
      </Sets>
    </Requirements>
    
    <!-- Hosts -->
    <Hosts>
      <Host xsi:type="Workbook">
        
        <!-- Desktop Form Factor -->
        <DesktopFormFactor>
          <!-- Gets the add-in started -->
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          
          <!-- Function file (for custom functions) -->
          <FunctionFile resid="Commands.Url" />
          
          <!-- Ribbon integration -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label" />
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16" />
                  <bt:Image size="32" resid="Icon.32x32" />
                  <bt:Image size="80" resid="Icon.80x80" />
                </Icon>
                
                <!-- Task Pane Button -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
        
      </Host>
    </Hosts>
    
    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://runfish5.github.io/excel-entity-standardizer/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://runfish5.github.io/excel-entity-standardizer/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://runfish5.github.io/excel-entity-standardizer/assets/icon-80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://github.com/runfish5/excel-entity-standardizer/README.md" />
        <bt:Url id="Commands.Url" DefaultValue="https://runfish5.github.io/excel-entity-standardizer/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://runfish5.github.io/excel-entity-standardizer/taskpane.html" />
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with your Excel add-in!" />
        <bt:String id="CommandsGroup.Label" DefaultValue="Your Add-in" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Taskpane" />
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Your add-in loaded successfully. Click the 'Show Taskpane' button to get started." />
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Click to open the add-in taskpane." />
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
</OfficeApp>
